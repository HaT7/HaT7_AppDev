@model IList<HaT7FptBook.Models.OrderHeader>
@using HaT7FptBook.Menu
@inject AdminSidebarService _AdminSidebarService

@{
    Layout =  "/Views/Shared/_LayoutStoreOwner.cshtml";
    ViewData["Title"] = "Order List";
}

@if (Model.Any())
{
    <form asp-action="Index" method="get">
        <div class="d-flex flex-row mb-3">
            <input
                oninvalid="InvalidMsg(this);" oninput="InvalidMsg(this);"
                type="text" name="SearchString" value="@ViewData["CurrentFilter"]"
                required pattern="\S+.*" placeholder="Find By Name or Email"
                class="w-50 mr-1"/>
            <button type="submit" value="Search" class="btn btn-primary mr-1">Search</button>
            <a asp-action="Index" class="btn btn-info mr-1">Back to List</a>
        </div>
    </form>
    
    <table style="width: 100%">
        <thead>
        <tr>
            <th>Oder Id</th>
            <th>Customer Name</th>
            <th>Customer Adress</th>
            <th>Customer Email</th>
            <th>Order Date</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
        </thead>

        @foreach (var order in @Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ApplicationUser.FullName</td>
                <td>@order.ApplicationUser.Address</td>
                <td>@order.ApplicationUser.Email</td>
                <td>@order.OderDate</td>
                <td>@order.Total</td>
                <td>
                    <a asp-controller="Orders" asp-action="OrderDetails" asp-route-orderHeaderId="@order.Id" class="btn btn-info">View Detail</a>
                </td>
            </tr>
        }
    </table>
    
    <div style="display:flex;text-align:center;justify-content:center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @for (var i = 0; i < @ViewBag.numberOfPages; i++)
                {
                    var style = (ViewBag.currentPage == @i) ? "active" : "";
                    <li class="page-item @style">
                        <a class="page-link" asp-route-id="@i" asp-route-searchString="@ViewData["CurrentFilter"]">@(i + 1)</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
else
{
    <h2 class="text-center">No Value Order</h2>
    <partial name="_StatusMessenger" model="@ViewData["Message"]"/>
}

@{
    _AdminSidebarService.SetActive("Orders", "Index", "StoreOwner");
}

@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}
