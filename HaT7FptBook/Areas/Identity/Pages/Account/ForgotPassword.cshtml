@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LoginLayout.cshtml";
}

<style>
    .bg-password-image {
        background-image: url("data:image/png;base64,");
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        background-color: #fff;
    }
    
    .p-5 {
        background-color: #ede9e9;
    }
</style>

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                        <p class="mb-4">
                            We get it, stuff happens. Just enter your email address below
                            and we'll send you a link to reset your password!
                        </p>
                    </div>
                    <form method="post" class="user">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Input.Email" 
                                   type="email" 
                                   class="form-control form-control-user"
                                   id="exampleInputEmail" 
                                   aria-describedby="emailHelp"
                                   placeholder="Enter Email Address...">
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Reset Password
                        </button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" asp-page="./Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Create an Account!</a>
                    </div>
                    
                    <div class="text-center">
                        <a class="small" asp-page="./Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Already have an account? Login!</a>
                    </div>
                    
                    <div class="text-center">
                        <a class="small" asp-area="Customer" asp-controller="Home" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]">Return Home Screen</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

